@model Loansv2.Models.File

@{
    ViewBag.Title = "Create";
}

<h2>Добавление файла к договору № @Html.DisplayFor(model => model.LoanAgreementId)</h2>

@using (Html.BeginForm("Create", "File", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.LoanAgreementId)

    <div class="form-horizontal">
        <h4></h4>
        <hr />

        <div class="form-group">
            @Html.Label("Выберите файл...", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Unknown" name="upload" class="btn btn-default"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Перейти к договору", "Details", "LoanAgreement", new { id = Model.LoanAgreementId }, null)
</div>
